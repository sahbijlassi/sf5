{% extends 'base.html.twig' %}
{% import'postMacro.twig' as drow %}
{% block body %}
{% block stylesheets %}
    {{ parent() }}
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Rokkitt" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href={{ asset('css/post.css') }}>
{% endblock %}
    {% block javascripts %}
        {{ parent() }}
        <script src="{{ asset('javascript/addlike.js') }}" defer></script>
        {% endblock %}
    <section class="hero">
        <div class="container">
            <div class="row">
                {% for post in posts %}
                    {{ drow.addPost(post.name,post.comments,post.likes,post.share) }}
                {% endfor %}
            </div><!--/ row -->
            {{ include('other.html.twig',{'backgroundColor':'gray'}) }}
        </div><!--/ container -->
    </section>
{% endblock %}