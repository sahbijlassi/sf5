{% extends 'base.html.twig' %}
{% import'postMacro.twig' as drow %}
{% block body %}
{% block stylesheets %}
    {{ parent() }}

    {{ encore_entry_link_tags('post') }}
{% endblock %}
    {% block javascripts %}
        {{ parent() }}
        {{ encore_entry_script_tags('post') }}
         <script src="{{ asset('javascript/addlike.js') }}" defer></script>
        {% endblock %}
    <section class="hero">
        <div class="container">
            <div class="row">
                {% for post in posts %}
                    {{ drow.addPost(post.name,post.comments,post.likes,post.share) }}
                {% endfor %}
            </div><!--/ row -->
            {{ include('other.html.twig',{'backgroundColor':'gray'}) }}
        </div><!--/ container -->
    </section>
{% endblock %}